<%= form_with model: @user, local: true, html: {:class => "form-horizontal"} do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table class="col-lg-7">
    <tr class="field row">
      <td class="col-lg-4 user_input_label"><%= form.label :name,  :class => "control-label"  %></td>
      <td class="col-lg-8"><%= form.text_field :name,  :class => "user_input user_name" %></td>
    </tr>
   
    <tr class="field row">
      <td class="col-lg-4 user_input_label"><%= form.label :email,  :class => "control-label"  %></td>
      <td class="col-lg-8"><%= form.email_field :email, :class => "user_input email" %></td>
    </tr>

    <tr class="field row">
      <td class="col-lg-4 user_input_label"><%= form.label :password,  :class => "control-label"  %></td>
      <td class="col-lg-8"><%= form.password_field :password, :class => "user_input password" %></td>
    </tr>

    <tr class="field row">
      <td class="col-lg-4 user_input_label"><%= form.label :password_confirmation,  :class => "ontrol-label"  %></td>
      <td class="col-lg-8"><%= form.password_field :password_confirmation, :class => "user_input password" %></td>
    </tr>
  </table>
  <%= form.submit "Confirm", class: "btn btn-lg btn-primary button-orange"%>
  <%= link_to cancel_text, cancel_path, class: "btn btn-primary btn-lg button-orange" %>
<% end %>
