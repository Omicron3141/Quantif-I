<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to "New Experiment", new_user_experiment_path(@user), class: "btn btn-primary button-orange" %>
<%= link_to "Experiments", user_experiments_path(@user), class: "btn btn-primary button-orange" %>
<%= link_to "Edit", edit_user_path, class: "btn btn-primary button-orange" %> 
