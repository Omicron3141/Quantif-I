<center>
  <br>
  <div class="jumbotron col-lg-10 col-lg-offset-1 light-green container">
  	<% flash.each do |message_type, message| %>
	  <div class="alert alert-<%= message_type %>"><%= message %></div>
	<% end %>
	<h1><%= @user.name %>'s Profile</h1>
	 
	<p>
	  email: <%= @user.email %>
	</p>
	<%= link_to "Experiments", user_experiments_path(@user), class: "btn btn-primary button-orange" %>
	<%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary button-orange" %>
  </div>
</center>